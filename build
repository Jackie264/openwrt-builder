#!/bin/bash
set -euo pipefail

START_TIME=$(date +%s)
BUILD_DIR="$HOME/Downloads/openwrt-24.10"
OUTPUT_BASE="$HOME/Downloads/firmware"
CONFIG_DIR="$HOME/Downloads/configs"
BACKUP_DIR="$HOME/Downloads/backup"
LOCAL_FEED_DIR="$HOME/Downloads/package"
FEED_NAME="mypackages"
KERNEL_VERSION="6.6.86-1"
ORIGIN_URL="downloads.openwrt.org/releases"
BRANCH="openwrt-24.10"

MYFEED_URL=""
DEVICE=""
OUTPUT_DIR=""
ARCH_PACKAGES=""
TARGET=""
SUBTARGET=""
GIT_TAG=""
GIT_NOV_TAG=""
IPADDR=""
TARGET_TAG=""
GIT_PULL_COMMIT=""
custom_key_file=""

BACKUP_LIST=(
	./include/kernel-defaults.mk
	./package/base-files/files/bin/config_generate
	./feeds.conf.default
)

select_git_target() {
	if [ -z "$BRANCH" ]; then
		echo "âŒ Error: BRANCH variable is not set."
		exit 1
	fi

	echo "ðŸŒ Fetching all remote tags from remote repository..."
	local current_dir=$(pwd)
	cd "$BUILD_DIR" || { echo "âŒ Error: Cannot enter $BUILD_DIR!"; exit 1; }

	local all_tags=$(git ls-remote --tags origin 2>/dev/null | sed 's#^.*refs/tags/##' | sed '/\^[{][}]$/d')
	cd "$current_dir"

	local filtered_tags=""
	local tag_list=""
	local tag_count=0

	if [ -z "$all_tags" ]; then
		echo "âš ï¸ Cannot find any remote tags."
		echo "Â  Â Building with a target tag is not possible."
		exit 1
	fi

	echo "Filtering tags to show v24.10+..."
	filtered_tags=$(echo "$all_tags" | grep '^v24\.10')
	
	if [ -z "$filtered_tags" ]; then
		echo "âš ï¸ Cannot find any v24.10+ tags in the remote repository."
		echo "Â  Â Cannot build with none tag."
		exit 1
	fi

	echo "Preparing filtered tag list for selection..."

	tag_count=$(echo "$filtered_tags" | wc -l)

	for tag in $filtered_tags; do
		tag_list+="$tag \"$tag\" "
	done

	local default_tag=$(echo "$filtered_tags" | tail -n 1)

	if [ -z "$default_tag" ]; then
		unset default_tag
	fi

	if [ -n "$default_tag" ]; then
		TARGET_TAG=$(whiptail --title "Select Target Tag (v24.10+)" --menu "Please choose the tag:" 25 60 $tag_count $tag_list --default-item "$default_tag" 3>&1 1>&2 2>&3) || exit 1
	else
		TARGET_TAG=$(whiptail --title "Select Target Tag (v24.10+)" --menu "Please choose the tag:" 25 60 $tag_count $tag_list 3>&1 1>&2 2>&3) || exit 1
	fi

	echo "âœ… Selected tag: $TARGET_TAG"
	BUILD_FROM_BRANCH_HEAD=false
}

restore_git_state() {
	if [ -n "$GIT_PULL_COMMIT" ]; then
		echo "â†©ï¸ Restoring Git repository to $GIT_PULL_COMMIT..."
		if [ -d "$BUILD_DIR/.git" ]; then
			if [ "$(pwd)" != "$BUILD_DIR" ]; then
				echo "â„¹ï¸ Changing directory to $BUILD_DIR for Git restore..."
				cd "$BUILD_DIR" || { echo "âŒ Error: Cannot enter $BUILD_DIR during Git repository restore. "; return 1; }
			fi
			git reset --hard "$GIT_PULL_COMMIT" || { echo "âŒ Error: git reset --hard $GIT_PULL_COMMIT failed! "; return 1; }
			echo "ðŸ§¹ Running make clean to remove build artifacts..."
			make clean || { echo "âš ï¸ Warning: make clean failed!"; }
			echo "âœ… Git repository restored."
		else
			echo "âš ï¸ Warning: Git repository $BUILD_DIR/.git does not exist, skipping Git repository restore."
			return 1
		fi
	fi
}

exit_handler() {
	local exit_status=$?
	echo "Running cleanup process..."
	restore_git_state
	echo "Cleanup process finished."
	exit "$exit_status"
}

setup_git_repository() {
	echo "ðŸ› ï¸ Setting up Git repository..."
	echo "ðŸ”„ Git checkout: $BRANCH"
	git checkout "$BRANCH" || { echo "âŒ Error: Failed to checkout $BRANCH."; exit 1; }
	echo "â¬‡ï¸ Pulling latest commits for branch '$BRANCH'..."
	git pull || { echo "âš ï¸ Warning: Failed to pull updates. Check network or repository. Using current branch state."; }
	GIT_PULL_COMMIT=$(git rev-parse HEAD)
	echo "â„¹ï¸ Recorded commit after Git pull: $GIT_PULL_COMMIT"
	select_git_target

	if [ "$BUILD_FROM_BRANCH_HEAD" = "true" ]; then
		echo "â„¹ï¸ Building from branch head '$BRANCH'. Skipping tag checkout."
	else
		echo "ðŸ˜´ Please wait one second..."
		sleep 1
		echo "ðŸ·ï¸ Git checkout: $TARGET_TAG"
		git checkout "$TARGET_TAG" || { echo "âŒ Error: Failed to checkout $TARGET_TAG."; exit 1; }
		echo "ðŸ”„ Updating submodules for tag '$TARGET_TAG'..."
		git submodule update --init --recursive || { echo "âŒ Error: Failed to update submodules for tag '$TARGET_TAG'."; exit 1; }
	fi

	echo "ðŸ—‘ï¸ Restoring files listed in BACKUP_LIST..."
	git restore "${BACKUP_LIST[@]}" || { echo "âš ï¸ Warning: Failed to git restore files in BACKUP_LIST."; }
	echo "âœ… Finished setting up Git repository."
}

restore_original_files() {
	echo "ðŸ” Restoring original files..."
	for file in "${BACKUP_LIST[@]}"; do
		base_name=$(basename "$file")
		[ -f "$BACKUP_DIR/$base_name" ] && cp "$BACKUP_DIR/$base_name" "$file"
	done
}

backup_original_files() {
	echo "ðŸ“¦ Backing up original files..."
	mkdir -p "$BACKUP_DIR"
	for file in "${BACKUP_LIST[@]}"; do
		base_name=$(basename "$file")
		[ -f "$file" ] && cp "$file" "$BACKUP_DIR/$base_name"
	done
}

set_vermagic_key() {
	VERMAGIC_KEY=$(echo "$DEVICE" | awk -F. '{print $NF}')
}

patch_device_files() {
	echo "ðŸ§© Applying all patch files for $DEVICE..."
	install -m 644 "$CONFIG_DIR/config.$DEVICE" ./.config
	install -m 644 "$CONFIG_DIR/vermagic.$VERMAGIC_KEY" ./vermagic
	install -m 755 "$CONFIG_DIR/config_generate.$DEVICE" ./package/base-files/files/bin/config_generate
	install -m 644 "$CONFIG_DIR/kernel-defaults.mk" ./include/kernel-defaults.mk
}

generate_key_download_script() {
	echo "ðŸ“ Generating uci-defaults script for key download..."

	local pub_key_source="$BUILD_DIR/key-build.pub"
	if [ ! -f "$pub_key_source" ]; then
		echo "âš ï¸ Warning: key-build.pub not found. Cannot generate key download script."
		echo "Â  Â Key download during first boot will not be configured."
		return 1
	fi

	custom_key_file=$(sha256sum "$pub_key_source" | head -c 16)
	if [ -z "$custom_key_file" ]; then
		echo "âŒ Error: Failed to calculate hash for key-build.pub. Cannot generate key download script."
		return 1
	fi

	if [ -z "$MYFEED_URL" ] || [ -z "$DEVICE" ]; then
		echo "âŒ Error: MYFEED_URL or DEVICE variables are not set. Cannot generate key download script."
		return 1
	}

	local script_dest_dir_in_source="package/base-files/files/etc/uci-defaults"
	local script_dest_path_in_source="$BUILD_DIR/$script_dest_dir_in_source/98-download-custom-key"

	echo "â„¹ï¸ Key hash filename: $custom_key_file"
	echo "â„¹ï¸ Key download URL will be constructed as: https://\$MYFEED_URL/\$DEVICE/latest/myfeeds-cert/\$CUSTOM_KEY_FILE"
	echo "Â  Â Using MYFEED_URL='$MYFEED_URL' and DEVICE='$DEVICE'"
	echo "â„¹ï¸ Generating script to: $script_dest_path_in_source"

	mkdir -p "$BUILD_DIR/$script_dest_dir_in_source"

	cat > "$script_dest_path_in_source" <<EOF
#!/bin/sh

# è¿™ä¸ªè„šæœ¬å°†åœ¨å›ºä»¶é¦–æ¬¡å¯åŠ¨æ—¶è‡ªåŠ¨ä»Ž Feed Web æœåŠ¡å™¨ä¸‹è½½è‡ªå®šä¹‰ opkg å…¬å…±å¯†é’¥

# --- !! Auto-generated by build.sh !! ---
# MYFEED_URL: $MYFEED_URL
# DEVICE: $DEVICE
# Key hash filename: $custom_key_file
# --- !! è¯·å‹¿æ‰‹åŠ¨ç¼–è¾‘æ­¤æ–‡ä»¶ï¼Œæ›´æ”¹è¯·ä¿®æ”¹ build.sh å¹¶é‡æ–°æž„å»º !! ---

CUSTOM_KEY_DOWNLOAD_URL="https://$MYFEED_URL/$DEVICE/latest/myfeeds-cert/$custom_key_file"

CUSTOM_KEY_FILE="$custom_key_file"
DEST_KEY_DIR="/etc/opkg/keys"

echo "æ­£åœ¨ä¸‹è½½è‡ªå®šä¹‰ opkg å…¬å…±å¯†é’¥..."

if [ -f "\$DEST_KEY_DIR/\$CUSTOM_KEY_FILE" ]; then
    echo "è‡ªå®šä¹‰ opkg å…¬å…±å¯†é’¥å·²å­˜åœ¨äºŽ \$DEST_KEY_DIR/\$CUSTOM_KEY_FILEã€‚è·³è¿‡ä¸‹è½½ã€‚"
    exit 0
fi

DOWNLOAD_CMD=""
if command -v wget >/dev/null 2>&1; then
    DOWNLOAD_CMD="wget -O"
elif command -v curl >/dev/null 2>&1; then
    DOWNLOAD_CMD="curl -o"
else
    echo "é”™è¯¯ï¼šæœªæ‰¾åˆ° wget æˆ– curl å‘½ä»¤ã€‚æ— æ³•ä¸‹è½½å…¬å…±å¯†é’¥æ–‡ä»¶ã€‚"
    exit 0
fi

mkdir -p "$DEST_KEY_DIR"

TMP_KEY_PATH="$DEST_KEY_DIR/\$CUSTOM_KEY_FILE.tmp"
FINAL_KEY_PATH="$DEST_KEY_DIR/\$CUSTOM_KEY_FILE"

if [ -n "\$DOWNLOAD_CMD" ]; then
    \$DOWNLOAD_CMD "\$TMP_KEY_PATH" "\$CUSTOM_KEY_DOWNLOAD_URL"

    if [ -f "\$TMP_KEY_PATH" ]; then
      mv "\$TMP_KEY_PATH" "\$FINAL_KEY_PATH"
      echo "è‡ªå®šä¹‰ opkg å…¬å…±å¯†é’¥å·²ä¸‹è½½å¹¶å®‰è£…åˆ° \$FINAL_KEY_PATHã€‚"
    else
      echo "é”™è¯¯ï¼šæ— æ³•ä»Ž \$CUSTOM_KEY_DOWNLOAD_URL ä¸‹è½½è‡ªå®šä¹‰ opkg å…¬å…±å¯†é’¥ã€‚"
    fi
fi

exit 0
EOF

	chmod +x "$script_dest_path_in_source"
	echo "âœ… Generated uci-defaults script: $script_dest_path_in_source"

	local output_packages_dir="$OUTPUT_DIR/packages"
	mkdir -p "$output_packages_dir"
	cp "$script_dest_path_in_source" "$output_packages_dir/98-download-custom-key"
	echo "âœ… Copied generated uci-defaults script to $output_packages_dir/98-download-custom-key"

	echo "ðŸ“¢ Remember to upload key-build.pub to your Feed Web server!"
	echo "Â  Â è¯·å°†æºç ç›®å½•ä¸‹çš„ '$pub_key_source' æ–‡ä»¶æ‰‹åŠ¨ä¸Šä¼ åˆ°ä»¥ä¸‹ URL å¯¹åº”çš„ Web è·¯å¾„ä¸‹ï¼š"
	echo "Â  Â https://$MYFEED_URL/$DEVICE/latest/myfeeds-cert/$custom_key_file"

	return 0
}

copy_firstboot_script() {
	echo "ðŸ“ Installing firstboot script..."
	local script_source="$CONFIG_DIR/firstboot-config.sh"
	local script_dest_dir="package/base-files/files/etc/uci-defaults"
	local script_dest_file="$script_dest_dir/99-firstboot-config"
	if [ -f "$script_source" ]; then
		mkdir -p "$script_dest_dir"
		install -m 755 "$script_source" "$script_dest_file"
		echo "âœ… Installed firstboot script to: $script_dest_file, setting permission 755"
	else
		echo "âš ï¸ Warning: Firstboot script file does not exist: $script_source"
		echo "Â  Â Please create firstboot-config.sh under $CONFIG_DIR next time."
		echo "Â  Â Building will continue, but no feeds cleanup will be performed on first boot."
	fi
	sleep 2
}

update_local_feeds() {
	echo "ðŸ”„ Updating local packages in $LOCAL_FEED_DIR..."
	for dir in "$LOCAL_FEED_DIR"/*; do
		if [ -d "$dir/.git" ]; then
			echo "âž¡ï¸Â  Pulling updates in $(basename "$dir") ..."
			git -C "$dir" pull --ff-only || echo "âš ï¸Â  Failed to update $(basename "$dir")"
		fi
	done
}

setup_local_feed() {
	echo "ðŸ“¦ Setting up local feed..."
	if ! grep -q "src-link $FEED_NAME" feeds.conf.default; then
		echo "src-link $FEED_NAME $LOCAL_FEED_DIR" >> feeds.conf.default
		echo "âœ… Added feed: $FEED_NAME"
	else
		echo "â„¹ï¸ Local feed $FEED_NAME already exists in feeds.conf.default"
	fi
	./scripts/feeds update -a
	./scripts/feeds install -a
}

select_device() {
	local base_device
	base_device=$(whiptail --title "Select Device" --menu "Choose a device to build:" 15 50 3 \
		"mx5300" "Linksys MX5300 (IPQ807x)" \
		"whw03v2" "Linksys WHW03 v2 (IPQ40xx)" \
		3>&1 1>&2 2>&3) || exit 1
	case "$base_device" in
		mx5300)
			DEVICE="mx5300"
			MYFEED_URL="feeds.onenas.fun"
			;;
		whw03v2)
			local sub_scene
			sub_scene=$(whiptail --title "WHW03V2 Configuration" --menu "Select deployment profile:" 12 50 2 \
				"home" "Home Enviroment" \
				"office" "Office Enviroment" \
				3>&1 1>&2 2>&3) || exit 1
			# echo "DEBUG: raw sub_scene=['$sub_scene']"
			# echo "DEBUG: raw sub_scene hexdump:"
			# printf "%s" "$sub_scene" | hexdump -C
			# echo "DEBUG: raw sub_scene octaldump:"
			# printf "%s" "$sub_scene" | od -c

			sub_scene=$(printf "%s" "$sub_scene" | sed 's/\xc2\xa0$//')

			# echo "DEBUG: trimmed sub_scene=['$sub_scene']"

			DEVICE="$sub_scene.whw03v2"
			if [ "$sub_scene" = "home" ]; then
				MYFEED_URL="feeds.onenas.fun"
			else
				MYFEED_URL="feeds.sh-mtgc.com"
			fi
			;;
		*)
			echo "âŒ Invalid selection"
			exit 1
			;;
	esac
}

clean_source_tree() {
	echo "ðŸ§¹ Cleaning up old build artifacts..."
	if [ -f "$BUILD_DIR/Makefile" ]; then
		cd "$BUILD_DIR" || exit 1
		make clean
	else
		echo "âŒ Makefile not found in $BUILD_DIR, cannot clean!"
		exit 1
	fi
}

make_output_folder() {
	echo "ðŸ“ Making output folder..."
	DATE_TAG=$(date +"%Y%m%d_%H%M")
	OUTPUT_DIR="$OUTPUT_BASE/$DEVICE/$DATE_TAG"
	mkdir -p "$OUTPUT_DIR"
	LINK_PATH="$OUTPUT_BASE/$DEVICE/latest"
	ln -sfn "$DATE_TAG" "$LINK_PATH"
	if [ -L "$LINK_PATH" ]; then
		echo "ðŸ”— 'latest' symlink created â†’ $LINK_PATH â†’ $DATE_TAG"
	else
		echo "âŒ Failed to create 'latest' symlink at $LINK_PATH"
	fi
}

prepare_config() {
	echo "ðŸ“¦ Setting ROOTFS output dir..."
	sed -i "/^CONFIG_TARGET_ROOTFS_DIR=.*/d" .config
	echo "CONFIG_TARGET_ROOTFS_DIR=\"$OUTPUT_DIR\"" >> .config
}

make_deconfig() {
	echo "âš™ï¸ Running make defconfig..."
	make defconfig || {
		echo "âŒ make defconfig failed!"
		exit 1
	}
}

detect_target_info() {
	echo "ðŸ” Detecting target info..."
	local config_file=".config"
	TARGET=$(grep -oP '^CONFIG_TARGET_BOARD="\K[^"]+' "$config_file")
	SUBTARGET=$(grep -oP '^CONFIG_TARGET_SUBTARGET="\K[^"]+' "$config_file")
	ARCH_PACKAGES=$(grep -oP '^CONFIG_TARGET_ARCH_PACKAGES="\K[^"]+' "$config_file")
	GIT_TAG=$(git describe --tags --always 2>/dev/null || echo "unknown")
	GIT_NOV_TAG=${GIT_TAG#v}
	IPADDR=$(grep -oP 'lan\)\s+ipad=\$\{ipaddr:-"\K[^"]+' package/base-files/files/bin/config_generate | head -n1)
	if [[ -z "$TARGET" || -z "$SUBTARGET" || -z "$ARCH_PACKAGES" ]]; then
		echo "âŒ Failed to detect TARGET, SUBTARGET, or ARCH_PACKAGES"
		exit 1
	fi
	echo "ðŸ“¦ GIT TAG=$GIT_TAG TARGET=$TARGET | SUBTARGET=$SUBTARGET | ARCH=$ARCH_PACKAGES | IP=$IPADDR"
}

generate_customfeeds_conf() {
	echo "ðŸ“ Generating customfeeds.conf for $DEVICE..."
	local ABI_HASH=$(cat ./vermagic)
	if [ -z "$ABI_HASH" ]; then
		echo "âŒ Error: Cannot get ABI-hash from ./vermagic!"
		echo "Â  Â This file is expected to exist after patch_device_files. Make sure ./vermagic exists and is not empty."
		exit 1
	fi
	local KMODS_URL="https://$ORIGIN_URL/$GIT_NOV_TAG/targets/$TARGET/$SUBTARGET/kmods/$KERNEL_VERSION-$ABI_HASH"
	cat > package/system/opkg/files/customfeeds.conf <<EOF
src/gz my_kmod https://$MYFEED_URL/$DEVICE/latest/targets/packages
src/gz my_packages https://$MYFEED_URL/$DEVICE/latest/packages/mypackages
src/gz openwrt_kmods $KMODS_URL

EOF
	echo "âœ… Created customfeeds.conf,"
	echo "Â  Â kmods source is: $KMODS_URL"
	sleep 5
}

target_summary() {
	echo ""
	echo "âœ… To build firmware for: $DEVICE"
	echo "ðŸ“ Firmware will save to: $OUTPUT_DIR"
	echo "ðŸ“¦ Target:Â  Â  Â  Â  Â  Â  Â  Â  $TARGET"
	echo "ðŸ“¦ Subtarget:Â  Â  Â  Â  Â  Â  Â $SUBTARGET"
	echo "ðŸ“¦ Packages arch:Â  Â  Â  Â  Â $ARCH_PACKAGES"
	echo "ðŸŒ Default IP:Â  Â  Â  Â  Â  Â  $IPADDR"
	echo "ðŸ”– Git Tag:Â  Â  Â  Â  Â  Â  Â  Â $GIT_TAG"
	echo ""
	sleep 2
}

build_firmware() {
	echo "âš™ï¸ Starting build for $DEVICE..."
	make download -j$(nproc)
	if ! make V=s -j$(nproc); then
		echo "âš ï¸ Multithread build failed. Retrying with single thread..."
		make V=s -j1
	fi
}

copy_all_output() {
	echo "ðŸ“¤ Copying firmware and packages..."
	rsync -a bin/targets/"$TARGET"/"$SUBTARGET"/ "$OUTPUT_DIR/targets/"
	rsync -a bin/packages/"$ARCH_PACKAGES"/ "$OUTPUT_DIR/packages/"
}

final_summary() {
	echo ""
	echo "âœ… Build completed for $DEVICE"
	echo "ðŸ“ Firmware saved to:Â  $OUTPUT_DIR"
	echo "ðŸ“¦ Target:Â  Â  Â  Â  Â  Â  Â $TARGET"
	echo "ðŸ“¦ Subtarget:Â  Â  Â  Â  Â  $SUBTARGET"
	echo "ðŸ“¦ Packages arch:Â  Â  Â  $ARCH_PACKAGES"
	echo "ðŸŒ Default IP:Â  Â  Â  Â  Â $IPADDR"
	echo "ðŸŒ Feed Source:Â  Â  Â  Â  $MYFEED_URL"
	echo "ðŸ”– Git Tag:Â  Â  Â  Â  Â  Â  $GIT_TAG"
	echo ""
	local END_TIME=$(date +%s)
	local DURATION=$((END_TIME - START_TIME))
	local HOURS=$((DURATION / 3600))
	local MINUTES=$(( (DURATION % 3600) / 60 ))
	local SECONDS=$((DURATION % 60))
	local DURATION_STRING=""
	if [ "$HOURS" -gt 0 ]; then
		DURATION_STRING+="${HOURS}h "
	fi
	if [ "$MINUTES" -gt 0 ] || [ "$HOURS" -gt 0 ]; then
		DURATION_STRING+="${MINUTES}m "
	fi
	if [ "$HOURS" -gt 0 ] || [ "$MINUTES" -gt 0 ] || [ "$SECONDS" -gt 0 ]; then
		DURATION_STRING+="${SECONDS}s"
	fi
	DURATION_STRING=$(echo "$DURATION_STRING" | sed 's/ $//')
	if [ -z "$DURATION_STRING" ]; then
		DURATION_STRING="0s"
	fi
	local FINISH_TIME_CST=$(TZ='Asia/Shanghai' date --date="@$END_TIME" +'%Y-%m-%d %H:%M:%S %Z')
	echo "â° Build finished at:Â  $FINISH_TIME_CST"
	echo "â±ï¸ Total duration:Â  Â  Â $DURATION_STRING"
	echo ""
}

main() {
	cd "$BUILD_DIR" || exit 1
	trap 'exit_handler' EXIT
	setup_git_repository
	select_device
	set_vermagic_key
	clean_source_tree
	update_local_feeds
	patch_device_files
	copy_firstboot_script
	setup_local_feed
	make_output_folder
	prepare_config
	make_deconfig
	generate_key_download_script
	detect_target_info
	generate_customfeeds_conf
	target_summary
	build_firmware
	final_summary
	copy_all_output
}

main "$@"
